{
  "name": "lease-vault",
  "version": "0.0.0",
  "scripts": {
  "ng": "ng",
  "start": "ng serve --open --proxy-config proxy.conf.json",
  "build": "ng build",
  "watch": "ng build --watch --configuration development",
  "test": "ng test",
  "serve:ssr:Lease_Vault": "node dist/Lease_Vault/server/server.mjs",

  "dev:ng": "ng serve --open --proxy-config proxy.conf.json",
  "dev:flask:win": "cd server && .\\.venv\\Scripts\\python.exe app.py",
  "dev:win": "concurrently -k -n ANGULAR,FLASK -c auto \"npm:dev:ng\" \"npm:dev:flask:win\"",  


  "dev:flask:nix": "cd server && . .venv/bin/activate && python app.py",
  "dev:nix": "bash -c 'source $HOME/.nvm/nvm.sh && nvm use 22 && concurrently -k \"bash -c \\\"source $HOME/.nvm/nvm.sh && nvm use 22 && ng serve --open --proxy-config proxy.conf.json\\\"\" \"npm run dev:flask:nix\"'"
},

  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.5",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
